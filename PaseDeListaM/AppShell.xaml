<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="PaseDeListaM.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:PaseDeListaM"
    xmlns:demo="clr-namespace:PaseDeListaM.Views.Demo"
    Shell.FlyoutBehavior="Disabled">

    <ShellContent
        Title="Grid Layout Demo"
        ContentTemplate="{DataTemplate demo:GridLayout}"
        Route="GridDemo"/>

    <ShellContent
        Title="Flex Layout Demo"
        ContentTemplate="{DataTemplate demo:FlexLayout}"
        Route="FlexDemo"/>

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    

</Shell>

